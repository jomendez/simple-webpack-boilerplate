{
  "name": "simple-webpack-boilerplate",
  "version": "1.0.0",
  "description": "Webpack, sass, ES7, boilerplate",
  "main": "index.js",
  "author": "Jose Mendez",
  "license": "MIT",
  "scripts": {
    "dev": "webpack-dev-server --watch --mode=development --config config/webpack.config.js",
    "dev:dist": "webpack-dev-server --mode=development --config ./config/webpack.config.js && http-server ./dist -o",
    "build": "webpack --mode=production -p --config config/webpack.config.js",
    "clear": "node ./config/clear_sensitive_data.js",
    "setup": "node ./config/site.setup.js",
    "postinstall": "node ./config/site.setup.js",
    "lint:js": "./node_modules/.bin/eslint \"src/**/*.js\"",
    "lint:styles": "stylelint \"src/**/*.scss\"",
    "deploy": "npm run build && node ./config/site.deploy.js"
  },
  "dependencies": {
    "@babel/polyfill": "^7.8.7",
    "jquery": "^3.2.1",
    "url-loader": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "autoprefixer": "^9.7.6",
    "babel-loader": "^8.0.5",
    "chalk": "^4.0.0",
    "clean-webpack-plugin": "^3.0.0",
    "clear": "^0.1.0",
    "css-loader": "^2.1.1",
    "enquirer": "^2.3.5",
    "eslint": "^6.8.0",
    "figlet": "^1.3.0",
    "file-loader": "^6.0.0",
    "ftp-deploy": "^2.3.7",
    "html-webpack-plugin": "^4.0.0-beta.8",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "path": "^0.12.7",
    "postcss-loader": "^3.0.0",
    "pug": "^2.0.4",
    "pug-loader": "^2.4.0",
    "robotstxt-webpack-plugin": "^7.0.0",
    "sass-loader": "^8.0.2",
    "sitemap-webpack-plugin": "^0.7.1",
    "style-loader": "^0.23.1",
    "stylelint": "^13.3.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.16.0",
    "stylelint-webpack-plugin": "^1.2.3",
    "webapp-webpack-plugin": "^2.7.1",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.1.14",
    "webpackbar": "^4.0.0"
  }
}
